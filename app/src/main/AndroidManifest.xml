<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.martahrefs.nutrition">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.ChatActivity"></activity>
        <activity android:name=".ui.ProductsActivity" />
        <activity android:name=".ui.DoctorActivity" />
        <activity
            android:name=".Splash"
            android:theme="@style/NoToolBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoToolBar" />
        <activity
            android:name=".ProfileActivity"
            android:theme="@style/NoToolBar" />
        <activity
            android:name=".RegistrationActivity"
            android:theme="@style/NoToolBar" />
        <activity android:name=".ui.DiseaseListActivity" />
        <activity android:name=".ui.FoodListActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
    </application>

</manifest>